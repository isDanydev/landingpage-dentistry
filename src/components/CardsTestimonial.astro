---
const { descripcion, nombre, paciente } = Astro.props;
---

<div
  class="flex flex-col p-2 bg-[#00BFFF] rounded-md hover:bg-[#12A8DA] hover:scale-105 transition-all duration-300"
>
  <p class="text-center text-sm font-normal">
    {descripcion}
  </p>
  <div class="flex items-center justify-around p-3">
    <img
      src="/assets/icons/actriz.png"
      alt=""
      class="size-12 bg-white rounded-full"
    />
    <div class="flex flex-col items-start justify-center">
      <h3 class="text-xl font-medium">{nombre}</h3>
      <span class="text-sm">{paciente}</span>
    </div>
  </div>
</div>
